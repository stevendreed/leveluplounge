<!-- Loop over each object in the projects array -->
{{#each projects as |project| }}
<div class="col-md-12 detector">
  <div class="col-md-12">
    <h2 class="postTitleSection">
      <a class="postTitle" href="/project/{{project.id}}">{{project.name}}</a>
    </h2>
    <p>Created by {{project.user.name}} on {{format_date project.date_created}}</p>
  </div>
    <p>
      {{project.description}}
    </p>
</div>
<div class="col-md-2 detector">
</div>
{{/each}}
